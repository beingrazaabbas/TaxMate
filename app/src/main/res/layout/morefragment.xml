<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF8FF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/logo_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/profile_image"
            android:fontFamily="@font/prompt_medium"
            android:text="Name"
            android:textColor="#0C2529"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/logo_image"
            android:layout_marginStart="50dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/prompt_medium"
            android:text="Email:"
           android:layout_marginLeft="90dp"
            android:textColor="#0C2529"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/age_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_label"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/prompt_medium"
            android:text="Age:"
            android:layout_marginLeft="90dp"

            android:textColor="#0C2529"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dob_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_label"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/prompt_medium"
            android:text="DOB:"
            android:layout_marginLeft="90dp"
            android:textColor="#0C2529"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mobile_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dob_label"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/prompt_medium"
            android:text="Mobile:"
            android:layout_marginLeft="90dp"

            android:textColor="#0C2529"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/password_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobile_label"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/prompt_medium"
            android:text="Password:"
            android:layout_marginLeft="90dp"

            android:textColor="#0C2529"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/change_password_button"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/password_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/prompt_medium"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="Change Password"
            android:textColor="#0C2529"
            android:textSize="11.5sp" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/change_password_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#0C2529"
            android:fontFamily="@font/prompt_medium"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logout_button"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/prompt_medium"
            android:text="Need Help? Contact Us."
android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/contact"
            android:layout_marginTop="30dp"
            android:src="@drawable/banner" />

    </RelativeLayout>
</ScrollView>

