<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taxavingfragment"
    android:background="#EDF8FF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".taxavingfragment">



    <!-- Heading -->
    <TextView
        android:id="@+id/headingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taxaving"
        android:fontFamily="@font/prompt_medium"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textColor="#0C2529"
        android:textStyle="bold"
        />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <!-- Tax Deductions availed -->
    <TextView
        android:id="@+id/deductionsHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tax Deductions you have availed:"
        android:fontFamily="@font/prompt_medium"
        android:textSize="20sp"
        android:textColor="#0C2529"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@id/logoImage"
        />

    <!-- List of availed deductions -->
    <TextView
        android:id="@+id/deductionsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/prompt_medium"
        android:textSize="16sp"
        android:textColor="#0C2529"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@id/deductionsHeading"
        />

        <TextView
            android:id="@+id/savings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prompt_medium"
            android:textSize="20sp"
            android:textColor="#0C2529"
            android:text="Tax you can still save: "
            android:layout_marginTop="5dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_below="@id/deductionsList"
            />




    <!-- Exemptions heading -->
    <TextView
        android:id="@+id/exemptionsHeading"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:text="Know your Exemptions,        Invest and Avail"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/prompt_medium"
        android:textSize="23sp"
        android:textColor="#0C2529"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/savings"
        />

    <!-- Exemption1 heading -->
    <TextView
        android:id="@+id/exemption1heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 80C"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:textColor="#0C2529"
        android:fontFamily="@font/prompt_semibold"
        android:textSize="20sp"
        android:layout_below="@id/exemptionsHeading"
        />

    <!-- Exemption1 details -->
    <TextView
        android:id="@+id/exemption1Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 80C allows individuals and HUFs in India to claim a deduction of up to Rs 1.5 lakh by investing in specified tax-saving avenues. Eligible investments include life insurance premiums, ELSS, EPF contributions, home loan principal payments, tuition fees, PPF contributions, and schemes like Sukanya Samriddhi Account, NSC, fixed deposits, and National Pension Scheme. These investments provide a means to save for the future while reducing taxable income."
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/prompt_medium"
        android:textSize="16sp"
        android:textColor="#0C2529"
        android:layout_below="@id/exemption1heading"
        />

    <!-- Exemption2 heading -->
    <TextView
        android:id="@+id/exemption2heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 80D"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:textColor="#0C2529"
        android:fontFamily="@font/prompt_semibold"
        android:textSize="20sp"
        android:layout_below="@id/exemption1Details"
        />

    <!-- Exemption2 details -->
    <TextView
        android:id="@+id/exemption2Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Under Section 80D, individuals can claim deductions on medical insurance premiums for themselves, family, and dependent parents. The deduction limit is Rs 25,000 for self/family and Rs 50,000 for senior citizen parents. Additional deductions are available for health checkups and medical expenses of senior citizens. Employer-paid premiums are also eligible for deduction."
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/prompt_medium"
        android:textSize="16sp"
        android:textColor="#0C2529"
        android:layout_below="@id/exemption2heading"
        />

    <!-- Exemption3 heading -->
    <TextView
        android:id="@+id/exemption3heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 24"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:textColor="#0C2529"
        android:fontFamily="@font/prompt_semibold"
        android:textSize="20sp"
        android:layout_below="@id/exemption2Details"
        />

    <!-- Exemption3 details -->
    <TextView
        android:id="@+id/exemption3Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The interest paid on home loans offers a valuable tax-saving opportunity. Individuals can claim a deduction of up to Rs. 2 lakh on the interest paid for a self-occupied property, while the entire interest amount can be claimed for a rented property. Furthermore, the principal component of the housing loan repayment is eligible for a deduction under Section 80C, with a maximum limit of Rs. 1.5 lakh. These provisions provide homeowners with significant tax benefits, making home loans an attractive option for both self-occupied and rented properties."
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/prompt_medium"
        android:textSize="16sp"
        android:textColor="#0C2529"
        android:layout_below="@id/exemption3heading"
        />

    <TextView
        android:id="@+id/exemption4heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 80E"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:textColor="#0C2529"
        android:fontFamily="@font/prompt_semibold"
        android:textSize="20sp"
        android:layout_below="@id/exemption3Details"
        />

    <!-- Exemption3 details -->
    <TextView
        android:id="@+id/exemption4Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Income Tax Act allows for a deduction on interest paid on education loans, subject to certain conditions. The loan must be taken from a bank or financial institution to pursue higher studies in India or abroad by the individual, their spouse, or children. This deduction can be claimed from the year of loan repayment for a period of up to eight assessment years or until the loan is fully repaid, whichever is earlier. It is important to note that even a legal guardian can avail this income tax deduction. This provision encourages individuals to invest in education and provides financial support for higher studies."
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/prompt_medium"
        android:textSize="16sp"
        android:textColor="#0C2529"
        android:layout_below="@id/exemption4heading"
        />

    <TextView
        android:id="@+id/exemption5heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 80G"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:textColor="#0C2529"
        android:fontFamily="@font/prompt_semibold"
        android:textSize="20sp"
        android:layout_below="@id/exemption4Details"
        />

    <!-- Exemption3 details -->
    <TextView
        android:id="@+id/exemption5Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 80G of the Income Tax Act, 1961 offers income tax deduction to an assessee, who makes donations to charitable organisations. This deduction varies based on the receiving organisation, which implies that one may avail a deduction of 50% or 100% of the amount donated, with or without restriction."
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/prompt_medium"
        android:textSize="16sp"
        android:textColor="#0C2529"
        android:layout_below="@id/exemption5heading"
        />


    <TextView
        android:id="@+id/exemption6heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 80EE"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:textColor="#0C2529"
        android:fontFamily="@font/prompt_semibold"
        android:textSize="20sp"
        android:layout_below="@id/exemption5Details"
        />

    <!-- Exemption3 details -->
    <TextView
        android:id="@+id/exemption6Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Under Section 80EE, homeowners can avail an additional deduction of Rs. 50,000 for the interest component of their home loan EMI. However, there are certain conditions that need to be met. The loan amount should not exceed Rs. 35,00,000, and the value of the property should not exceed Rs. 50,00,000. Furthermore, the individual should not own any other property at the time the loan is sanctioned. This deduction provides an incentive for first-time homebuyers and encourages affordable housing."
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/prompt_medium"
        android:textSize="16sp"
        android:textColor="#0C2529"
        android:layout_below="@id/exemption6heading"
        />


    <TextView
        android:id="@+id/exemption7heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 80TTA"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:textColor="#0C2529"
        android:fontFamily="@font/prompt_semibold"
        android:textSize="20sp"
        android:layout_below="@id/exemption6Details"
        />

    <!-- Exemption3 details -->
    <TextView
        android:id="@+id/exemption7Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section 80TTA of the Income Tax Act allows Individuals and HUFs to claim a deduction of up to Rs. 10,000 on income earned from savings account interest. If the interest income is less than or equal to Rs. 10,000, the entire amount is eligible for deduction. However, if the interest income exceeds Rs. 10,000, only the first Rs. 10,000 is deductible, and the remaining amount is taxable. This deduction encourages individuals to save and earn interest on their savings while providing tax relief on modest interest income."
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/prompt_medium"
        android:textSize="16sp"
        android:textColor="#0C2529"
        android:layout_below="@id/exemption7heading"
        />



        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/savings"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/tax" />


        <!-- Add more exemptions as needed -->

    </RelativeLayout>
</ScrollView>

